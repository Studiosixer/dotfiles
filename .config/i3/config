###############################################################################
# Basically all customizations down here

set $Locker i3lock -c 000000 && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+End mode "$mode_system"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position top
    height 25
    status_command python ~/.config/i3/i3pystatus-config.py
    i3bar_command i3bar -t
    colors {
      separator $base03
        background $transparent
        statusline $base05
        focused_workspace $base0C $base0D $base00
        active_workspace $base02 $base02 $base07
        inactive_workspace $base01 $base01 $base03
        urgent_workspace $base08 $base08 $base07
    }
  strip_workspace_numbers yes
}

# Gaps
gaps inner $gaps_inner_default
gaps outer $gaps_outer_default
bindsym $mod+g          gaps inner current set 0; gaps outer current set 0
bindsym $mod+Shift+g    gaps inner current set $gaps_inner_default; gaps outer current set $gaps_outer_default
smart_gaps on

