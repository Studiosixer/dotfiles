bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+y		resize shrink width 10 px or 10ppt
bindsym $mod+u		resize shrink height 10 px or 10 ppt
bindsym $mod+i		resize grow height 10 px or 10 ppt
bindsym $mod+o		resize grow width 10 px or 10 ppt
# bindsym $mod+Shift+v		[title="(?)neomutt"] move window to workspace current; fullscreen enable

bindsym $mod+b			    gaps inner current plus 5
bindsym $mod+Shift+b		gaps inner current minus 5
bindsym $mod+n			    gaps outer current plus 5
bindsym $mod+Shift+n		gaps outer current minus 5
bindsym $mod+g          gaps inner current set 0; gaps outer current set 0
bindsym $mod+Shift+g		gaps inner current set $gaps_inner_default; gaps outer current set $gaps_outer_default

